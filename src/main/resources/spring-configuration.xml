<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="emFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="packagesToScan" value="org.academiadecodigo.javabank.model"/>
        <property name="jpaVendorAdapter">
            <bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter"/>
        </property>
        <property name="jpaProperties">
            <map>
                <entry key="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
                <entry key="hibernate.show_sql" value="false" />
                <entry key="hibernate.hbm2ddl.auto" value="validate"/>
            </map>
        </property>
    </bean>

    <bean id="system.in" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField" value="java.lang.System.out"/>
    </bean>

    <bean id="system.out" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField" value="java.lang.System.in"/>
    </bean>

    <bean id="prompt" class="org.academiadecodigo.bootcamp.Prompt">
        <constructor-arg ref="system.in"/>
        <constructor-arg ref="system.out"/>
    </bean>

    <bean id="authService" class="org.academiadecodigo.javabank.services.AuthServiceImpl"/>
    <bean id="customerService" class="org.academiadecodigo.javabank.services.CustomerServiceImpl"/>
    <bean id="accountService" class="org.academiadecodigo.javabank.services.AccountServiceImpl"/>

    <bean id="accountFactory" class="org.academiadecodigo.javabank.factories.AccountFactory"/>

    <bean id="jpaSessionManager" class="org.academiadecodigo.javabank.persistence.jpa.JpaSessionManager">
        <constructor-arg ref="emFactory"/>
    </bean>
    <bean id="jpaTransactionManager" class="org.academiadecodigo.javabank.persistence.jpa.JpaTransactionManager">
        <constructor-arg ref="jpaSessionManager"/>
    </bean>

    <bean id="jpaAccountDao" class="org.academiadecodigo.javabank.persistence.dao.jpa.JpaAccountDao">
        <constructor-arg ref="jpaSessionManager"/>
    </bean>

    <bean id="jpaCustomerDao" class="org.academiadecodigo.javabank.persistence.dao.jpa.JpaCustomerDao">
        <constructor-arg ref="jpaSessionManager"/>
    </bean>

    <bean id="loginController" class="org.academiadecodigo.javabank.controller.LoginController">
        <property name="view" value="loginView"/>
        <property name="authService" value="authService"/>
        <property name="nextController" value="mainController"/>
    </bean>
    <bean id="mainController" class="org.academiadecodigo.javabank.controller.MainController">
        <property name="view" value="mainView"/>
        <property name="authService" value="authService"/>
        <property name="controllerMap">
            <map>
                <entry key="1" value="balanceController"/>
                <entry key="2" value="newAccountController"/>
                <entry key="3" value="depositController"/>
                <entry key="4" value="withdrawalController"/>
            </map>
        </property>
    </bean>
    <bean id="newAccountController" class="org.academiadecodigo.javabank.controller.NewAccountController">
        <property name="authService" value="authService"/>
        <property name="view" value="newAccountView"/>
        <property name="accountFactory" value="accountFactory"/>
        <property name="accountService" value="accountService"/>
    </bean>
    <bean id="balanceController" class="org.academiadecodigo.javabank.controller.BalanceController">
        <property name="view" value="balanceView"/>
        <property name="authService" value="authService"/>
        <property name="customerService" value="customerService"/>
    </bean>
    <bean id="depositController" class="org.academiadecodigo.javabank.controller.transaction.DepositController">
        <property name="customerService" value="customerService"/>
        <property name="authService" value="authService"/>
        <property name="view" value="depositView"/>
        <property name="accountService" value="accountService"/>
    </bean>
    <bean id="withdrawalController" class="org.academiadecodigo.javabank.controller.transaction.WithdrawalController">
        <property name="accountService" value="accountService"/>
        <property name="view" value="withdrawalView"/>
        <property name="authService" value="authService"/>
        <property name="customerService" value="customerService"/>
    </bean>


    <bean id="loginView" class="org.academiadecodigo.javabank.view.LoginView">
        <property name="loginController" value="loginController"/>
        <property name="prompt" value="prompt"/>
    </bean>
    <bean id="mainView" class="org.academiadecodigo.javabank.view.MainView">
        <property name="prompt" value="prompt"/>
        <property name="mainController" value="mainController"/>
    </bean>
    <bean id="newAccountView" class="org.academiadecodigo.javabank.view.NewAccountView">
        <property name="newAccountController" value="newAccountController"/>
    </bean>
    <bean id="balanceView" class="org.academiadecodigo.javabank.view.BalanceView">
        <property name="balanceController" value="balanceController"/>
    </bean>
    <bean id="depositView" class="org.academiadecodigo.javabank.view.AccountTransactionView">
        <property name="prompt" value="prompt"/>
        <property name="transactionController" value="depositController"/>
    </bean>
    <bean id="withdrawalView" class="org.academiadecodigo.javabank.view.AccountTransactionView">
        <property name="prompt" value="prompt"/>
        <property name="transactionController" value="withdrawalController"/>
    </bean>



</beans>
